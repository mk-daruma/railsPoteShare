<div class="only_from_page">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class:"only_from_page_form" }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <h2>新しいアカウントを作成</h2>

    <div class="only_from_page_field">
      <span class="must">必須</span>
      <%= f.text_field :name, autofocus: true, autocomplete: "name" , placeholder: "ユーザー名"  %>
    </div>
    
    <div class="only_from_page_field">
      <span class="must">必須</span>
      <%= f.email_field :email, autocomplete: "email", placeholder: "メールアドレス" %>
    </div>

    <div class="only_from_page_field">
      <%# <% if @minimum_password_length %>  
        <%# <em>(<%= @minimum_password_length characters minimum )</em> %>
      <%# <% end <br />  %>
      <span class="must">必須</span>
      <%= f.password_field :password, autocomplete: "new-password" , placeholder: "パスワード"%>
    </div>

    <div class="only_from_page_field">
      <span class="must">必須</span>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" , placeholder: "パスワード確認"%>
    </div>

    <div class="only_from_page_field">
      <p>ルーム画像<span class="must">必須</span><%= f.file_field :user_image,   placeholder: "ファイルを選択"  %></p>
    </div>

    <div class="actions">
      <%= f.submit "新しいアカウントを作成" %>
    </div>
    
  <% end %>
</div>

  <%= render "users/shared/links" %>
